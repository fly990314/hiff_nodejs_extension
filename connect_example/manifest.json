{
  "name": "HTML DIFF extension",
  "description": "Easily compare two HTML elements.",
  "version": "1.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "18.0",

  "background": {
    "service_worker": "background.js"
  },

  "action": {  
      "default_title": "hiff mix extension",  
      "default_icon": { 
      "16": "diff-img/diff-logo-icon-16.png", 
      "24": "diff-img/diff-logo-icon-24.png",  
      "32": "diff-img/diff-logo-icon-32.png" 
      },  
      "default_popup": "popup.html"
  } ,

  "permissions": ["storage"],

  "icons": {
     "48":  "diff-img/diff-logo-icon-48.png",
     "64":  "diff-img/diff-logo-icon-64.png",
     "128": "diff-img/diff-logo-icon-128.png"
  }, 
  "devtools_page": "devtools.html"

}